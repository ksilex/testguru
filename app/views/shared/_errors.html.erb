<% if resource.errors.full_messages.any? %>
  <h2><%=I18n.t("errors.template.header",
              count: resource.errors.count,
              model: resource.class.model_name.human.downcase)%>:
  </h2>
  <ul>
  <% resource.errors.full_messages.each do |error| %>
    <li><b><%= error %></b></li>
  <% end %>
  <hr>
  </ul>
<% end %>
