<h1>Ответы к вопросу <%=@question.body%></h1>
<% if show_link(@question) %>
<%= link_to "Добавить ответ", new_admin_question_answer_path(@question)%>
<% end %>
<table>
  <tr>
    <th>Ответ</th>
    <th>Корректный</th>
    <th colspan="2">Действия</th>
  </tr>
  <%= render @question.answers %>
</table>
<%= link_to "Назад", [:admin, @question.test] %>
