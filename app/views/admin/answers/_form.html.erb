<%= render "shared/errors", resource: @answer %>
<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to t("back"), [:admin, @answer.question] %>
